<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width = "match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="Picture Path" />

    <Button
        android:id="@+id/buttonPickImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/editText1"
        android:text="选择图片" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/deleFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/imageView"
        android:text="删除文件" />

    <Button
        android:id="@+id/alterFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/deleFileButton"
        android:text="修改文件" />

    <Button
        android:id="@+id/buttonCreatFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleFileButton"
        android:layout_toRightOf="@id/deleFileButton"
        android:text="创建文件"/>

    <Button
        android:id="@+id/buttonPickDirec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/alterFileButton"
        android:layout_toRightOf="@id/alterFileButton"
        android:text="选择文件夹"/>

    <EditText
        android:id="@+id/fileEdiText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:hint="context in file"/>
    <Button
        android:id="@+id/buttonSelectFile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/fileEdiText"
        android:text="读取文件内容"/>

</RelativeLayout>
